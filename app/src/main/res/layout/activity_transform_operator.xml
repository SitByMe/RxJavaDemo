<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ptv.zohar.rxjavademo.activities.TransformOperatorActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_buffer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="bufferOperator"
        android:text="buffer"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_window"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="windowOperator"
        android:text="window"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_buffer" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_flat_map"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="flatMapOperator"
        android:text="flatMap"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_window" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_concat_map"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="concatMapOperator"
        android:text="concatMap"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_flat_map" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_flat_map_iterable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="flatMapIterableOperator"
        android:text="flatMapIterable"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_concat_map" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_group_by"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="groupByOperator"
        android:text="groupBy"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_flat_map_iterable" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_map"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="mapOperator"
        android:text="map"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_group_by" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_cast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="castOperator"
        android:text="cast"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_map" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_scan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="scanOperator"
        android:text="scan"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_cast" />
</android.support.constraint.ConstraintLayout>
